{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    "paths": {
      "@/controllers/*": ["src/controllers/*"],
      "@/models/*": ["src/models/*"],
      "@/routes/*": ["src/routes/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*", "./src/*"]
}
